{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "src/*"
      ],
      "#/config": [
        "src/config/index.ts"
      ],
      "#/documentation": [
        "src/core/documentation/v1/index.ts"
      ],
      "#/logger": [
        "src/infra/logger/index.ts"
      ],
      "#/postgres/config": [
        "src/infra/database/postgres/config/index.ts"
      ],
      "#/postgres/entities": [
        "src/infra/database/postgres/entities/index.ts"
      ],
      "#/postgres/migrations": [
        "src/infra/database/postgres/migrations/index.ts"
      ],
      "#/postgres/repositories": [
        "src/infra/database/postgres/repositories/index.ts"
      ],
      "#/shared/types/api": [
        "src/shared/types/api/index.ts"
      ],
      "#/shared/utils": [
        "src/shared/utils/index.ts"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src"
  ]
}